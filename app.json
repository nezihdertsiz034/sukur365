{
  "expo": {
    "name": "Oruç Zinciri - Ramazan Rehberi",
    "slug": "oruc-zinciri-ramazan-rehberi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/android-chrome-512x512.png",
    "userInterfaceStyle": "automatic",
    "description": "2026 Ramazan ayı için oruç takibi ve dini rehber uygulaması. Namaz vakitleri, Kur'an-ı Kerim, dualar, tesbih sayacı ve daha fazlası.",
    "primaryColor": "#1a5f3f",
    "splash": {
      "image": "./assets/android-chrome-512x512.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a5f3f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/android-chrome-512x512.png",
      "bundleIdentifier": "com.nezihdertsiz.oruczinciri",
      "buildNumber": "1",
      "splash": {
        "image": "./assets/android-chrome-512x512.png",
        "resizeMode": "contain",
        "backgroundColor": "#1a5f3f"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Uygulama konum bilginizi kıble yönünü hesaplamak ve namaz vakitlerini belirlemek için kullanır.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Uygulama konum bilginizi kıble yönünü hesaplamak için kullanır."
      }
    },
    "android": {
      "icon": "./assets/android-chrome-192x192.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/android-chrome-512x512.png",
        "backgroundColor": "#1a5f3f"
      },
      "splash": {
        "image": "./assets/android-chrome-512x512.png",
        "resizeMode": "contain",
        "backgroundColor": "#1a5f3f"
      },
      "package": "com.nezihdertsiz.oruczinciri",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.ico",
      "manifest": "./assets/site.webmanifest"
    },
    "plugins": [
      "expo-splash-screen",
      [
        "expo-notifications",
        {
          "icon": "./assets/android-chrome-192x192.png",
          "color": "#1a5f3f",
          "sounds": []
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Uygulama konum bilginizi kıble yönünü hesaplamak için kullanır."
        }
      ]
    ],
    "scheme": "oruc-zinciri",
    "extra": {
      "eas": {
        "projectId": "WILL_BE_GENERATED"
      }
    }
  }
}