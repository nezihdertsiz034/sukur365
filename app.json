{
  "expo": {
    "name": "Sukur365",
    "slug": "musluman-plus",
    "newArchEnabled": false,
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/android-chrome-512x512.png",
    "userInterfaceStyle": "automatic",
    "description": "Oruç, ibadet ve şükür için günlük takip uygulaması.",
    "primaryColor": "#1a5f3f",
    "splash": {
      "image": "./assets/android-chrome-512x512.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a5f3f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/android-chrome-512x512.png",
      "bundleIdentifier": "com.nezihdertsiz.sukur360",
      "buildNumber": "19",
      "googleServicesFile": "./GoogleService-Info.plist",
      "splash": {
        "image": "./assets/android-chrome-512x512.png",
        "resizeMode": "contain",
        "backgroundColor": "#1a5f3f"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Uygulama konum bilginizi kıble yönünü hesaplamak ve namaz vakitlerini belirlemek için kullanır.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Uygulama konum bilginizi kıble yönünü hesaplamak için kullanır.",
        "UIBackgroundModes": [
          "audio",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "icon": "./assets/android-chrome-192x192.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/android-chrome-512x512.png",
        "backgroundColor": "#1a5f3f"
      },
      "splash": {
        "image": "./assets/android-chrome-512x512.png",
        "resizeMode": "contain",
        "backgroundColor": "#1a5f3f"
      },
      "package": "com.nezihdertsiz.sukur360",
      "versionCode": 17,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.ico",
      "manifest": "./assets/site.webmanifest"
    },
    "plugins": [
      "expo-dev-client",
      "expo-splash-screen",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification_icon.png",
          "sounds": [
            "./assets/ezan.mp3",
            "./assets/ezan_kisa.mp3",
            "./assets/yunus_emre.mp3"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Uygulama konum bilginizi kıble yönünü hesaplamak için kullanır."
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-build-properties",
        {
          "android": {
            "targetSdkVersion": 35,
            "compileSdkVersion": 35,
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraGradleArguments": [
              "-Pandroid.jvmargs=-Xmx4096m"
            ]
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-audio",
      "./plugins/android-firebase-manifest"
    ],
    "scheme": "musluman-plus",
    "extra": {
      "eas": {
        "projectId": "9851fa95-a6d3-4a54-bbf9-23fe79cacf5e"
      }
    },
    "owner": "nezihdertsiz"
  }
}
